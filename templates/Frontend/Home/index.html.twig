{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	{% if (user) %}
		<button>
			<a href="/logout">Déconnexion</a>
		</button>
	{% else %}
		<button>
			<a href="/login">Connexion</a>
		</button>
	{% endif %}
	<section>
		<h2>Les évènements à venir</h2>
		<div class="container">
			<div class="row">
				{% for event in events %}
					<div class="col-md-6">
						<div class="card">
							<div class="card-body">
								<h3 class="card-title">{{ event.name }}</h3>
								<h4>
									{% for category in event.categories %}
										{{category.titre}}
									{% endfor %}
								</h4>
								{% if (user) %}
									<button>
										Participer
									</button>
								{% endif %}
							</div>

						</div>
					</div>


				{% endfor %}
			</div>
		</div>
	</section>
	<section>
		<p>Si vous souhaitez participer à un évènement, vous devez vous inscrire</p>
	</section>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}


	<section>
		<div class="image">
			<img src=" {{ asset ('images/conference.jpg') }} " alt='image' height='550'>
		</div>
	</section>


	<section>
		<h1 class="h1 font-weight-normal healthh mt-2 mb-3">Evènements à venir</h1>
		<div class=" container">
			<div class="row">
				{% for event in events %}
					<div class="col-md-6">
						<div class="card shadow p-3 mb-5 bg-body rounded" style="width: 100%;height:95%;display: flex;">
							<div class="card-body">
								<h2 class="card-title font-weight-normal ecriture">{{ event.name }}</h2>

								<h6>
									{% for category in event.categories %}
										<p class="card-text">
											Catégorie
											{{category.titre}}</p>
									{% endfor %}

									<p class="card-text">
										Aura lieu le
										{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}
									</p>
									<p class="card-text">
										Le lieu de l'évenement
										{{event.location}}</p>


								</h6>
								{% if (app.user) %}
									<form action="event-participate" method="POST">
										<button class="btn btn-success">
											Participer
										</button>
										<input type="hidden" name="token" value="{{ csrf_token('participate' ~ event.id) }}">
										<input type="hidden" name="id" value="{{ event.id }}">
									</form>
								{% endif %}
							</div>

						</div>
					</div>


				{% endfor %}
			</div>
		</div>
	</section>

	{% if not app.user %}
		<section class="mt-5">
			<h5 style="text-align:center;">Si vous souhaitez participer à un évènement, vous devez vous
				<a href="/register" class="ecriture">Inscrire
				</a>
			</h5>
		</section>
	{% endif %}


	<div class="container  shadow p-3 bg-body mt-5">
		<p class="ecriture" style="text-align: center;">Copyright HEALTH EVENT 2024</p>
	</div>

{% endblock %}

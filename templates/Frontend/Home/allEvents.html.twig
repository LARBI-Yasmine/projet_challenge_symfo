{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	{% if (user) %}
		<button>
			<a href="/logout">Déconnexion</a>
		</button>
	{% else %}
		<button>
			<a href="/login">Connexion</a>
		</button>
	{% endif %}
	<section>
		<h2>Les évènements à venir</h2>
		<div class="container">
			<div class="row">
				{% for event in events %}
					<div class="col-md-6">
						<div class="card">
							<div class="card-body">
								<h3 class="card-title">{{ event.name }}</h3>
								<h4>
									{% for category in event.categories %}
										{{category.titre}}
									{% endfor %}
								</h4>
								{% if (user) %}
									<form action="/eventParticipate" method="POST">
										<button>
											Participer
										</button>
										<input type="hidden" name="token" value="{{ csrf_token('participate' ~ event.id) }}">
										<input type="hidden" name="id" value="{{ event.id }}">
									</form>
								{% endif %}
							</div>

						</div>
					</div>


				{% endfor %}
			</div>
		</div>
	</section>
	<div>
		<button>
			<a href="/">Retour</a>
		</button>
	</div>
	{% if (not user) %}
		<section>
			<p>Si vous souhaitez participer à un évènement, vous devez vous inscrire</p>
		</section>
	{% endif %}
{% endblock %}

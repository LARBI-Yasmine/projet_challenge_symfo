{% extends 'base.html.twig' %}

{% block title %}modifier utilisateur
{% endblock %}

{% block body %}
	<h1 class="h3 font-weight-normal healthh mt-5">Editer l'utilisateur
		{{user.firstname}}
		{{user.lastname}}</h1>

	<div class="shadow p-3 mb-5 bg-body rounded col-3 position-absolute top-50 start-50 translate-middle">

		<div class="container col-8 mt-5 ">
			<div class="row">
				{% form_theme form 'bootstrap_5_layout.html.twig' %}
				{{ form_start(form) }}
				{{ form_widget(form) }}
				<button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
				<a href="{{ path('app_utilisateurs') }}" class="btn btn-primary">Retour</a>
				{{ form_end(form) }}

			</div>
		</div>
	</div>

{% endblock %}

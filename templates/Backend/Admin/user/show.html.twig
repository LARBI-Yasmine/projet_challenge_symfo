							<td>{{user.lastname}}</td>
						</tr>
						<tr>
							<th>Email</th>
							<td>{{user.email}}</td>
						</tr>
						<tr>
							<th>Roles</th>
							<td>
								{% for role in user.roles %}
									{% if role == 'ROLE_USER' %}
										Utilisateur
									{% elseif role == 'ROLE_EDITOR' %}
										Editeur
									{% elseif role == 'ROLE_ADMIN' %}
										Administrateur


									{% endif %}


								{% endfor %}
							</td>
						</tr>
					</tbody>
				</table>
			</div>
			<table>
				<tr>
					<td>
						<a href="{{ path('app_utilisateurs') }}" class="btn btn-primary">Retour</a>


{% extends 'base.html.twig' %}

{% block title %}EventDétail
{% endblock %}

{% block body %}
	<h1 class="h3 font-weight-normal healthh mt-5 ">Evenement :
		{{event.name}}</h1>


	<div class="shadow p-3 mb-5 bg-body rounded col-6 position-absolute top-50 start-50 translate-middle">
		<div class="container col-10 mt-4 ">
			<div class="row">

				<table class="table">
					<tbody>
						<tr>
							<th>ID</th>
							<td>{{ event.id }}</td>
						</tr>
						<tr>
							<th>Name</th>
							<td>{{ event.name }}</td>
						</tr>
						<tr>
							<th>Catégorie(s)</th>
							<td>
								{% for category in event.categories %}
									{{ category.titre }}
								{% endfor %}
							</td>
						</tr>
						<tr>
							<th>Date</th>
							<td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
						<tr>
							<th>Location</th>
							<td>{{ event.location }}</td>
						</tr>

					</tbody>
				</table>


				<table>

					<tr>
						<td>
							<a href="{{ path('app_event_index') }}" class="btn btn-primary">retour</a>

						</td>
						<td>

							<a href="{{ path('app_event_edit', {'id': event.id}) }} " class="btn btn-warning">Modifier</a>
						</td>
						<td>

							{{ include('Backend/Event/_delete_form.html.twig') }}
						</td>

					</tr>
				</table>

			</div>
		</div>
	</div>


{% endblock %}
